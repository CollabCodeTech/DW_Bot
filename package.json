{
  "name": "dw-bot",
  "version": "0.0.0",
  "description": "dw-bot",
  "license": "MIT",
  "repository": "",
  "author": "",
  "keywords": [
    ""
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "start": "node ./lib",
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
    "test": "npm run build && ava",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "tmi.js": "^1.2.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.64",
    "@types/node": "^7.0.0",
    "ava": "^0.19.1",
    "coveralls": "^2.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.0.0",
    "ts-node": "^3.0.0",
    "tslint": "^5.0.0",
    "tslint-config-airbnb": "^5.0.1",
    "typescript": "^2.0.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  },
  "ava": {
    "files": [
      "test/**/*-spec.js"
    ],
    "source": [
      "src/**/*.ts",
      "!lib/**/*"
    ]
  }
}
